{
  "tasks": {
    "test": "deno test",
    "test:watch": "deno test --watch",
    "analyze": "deno run --allow-run --allow-read --allow-write scripts/analyze-problems.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "test": {
    "include": ["problems/"]
  }
}
